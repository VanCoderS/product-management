extends ../../layouts/default.pug

block main 
    if(product.title)
        h1 #{product.title}

    if(product.price)
        .mb-4 Giá: <b>#{product.price}$</b>

    if(product.discountPercentage)
        .mb-4 Giảm giá: <b>#{product.discountPercentage}%</b>
    
    if(product.stock)
        .mb-4 Còn lại: <b>#{product.stock}</b>

    if(product.thumbnail)
        .mb-4
            img(
                src=product.thumbnail
                alt=product.title
                style="width: 200px; height: auto"
            )

    if(product.status)
        .mb-4 Trạng thái: 
            if (product.status === "active")
                a(class="badge badge-success") Hoạt động
            else 
                a(class="badge badge-danger") Dừng hoạt động

    if(product.position)
        .mb-4 Vị trí: <b>#{product.position}</b>

    if(product.description)
        .mb-4 #{product.description}

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning btn-sm ml-1"
    ) Sửa
    button(
        class="btn btn-danger btn-sm ml-1"
        button-delete 
        data-id=product.id
        data-title=product.title
    ) Xóa

    form(
        action 
        method="POST"
        form-delete-item 
        data-path=`${prefixAdmin}/products/delete`
    )

    script(src="/admin/js/product.js") 