mixin showAlertSuccess(time)
    - if (messages.success)
        div(
            class="alert alert-success"
            data-time=time
            show-alert
        ) #{messages.success} <span close-alert>x</span>

mixin showAlertError(time)
    - if (messages.error)
        div(
            class="alert alert-danger"
            data-time=time
            show-alert
        ) #{messages.error} <span close-alert>x</span>